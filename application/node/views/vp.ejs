<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/css/mystyle.css">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>

    <title>Login Page</title>
  </head>
  <body>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand">TutorPal</a>

        <form class="d-flex me-auto my-2 my-lg-0">
          <select class="mdb-select md-form" name="category" onchange="this.form.submit()">
            <option value="">Major </option>
            <% for(let i = 0; i < searchCategoriesShortName.length; i++) { %>
              <option value="<%= searchCategoriesShortName[i]%>" <% if(category === searchCategoriesShortName[i]) { %> selected <% } %>><%= searchCategoriesLongName[i]%></option>
          <%}%>
          </select>
          <input class="form-control me-2" id="search" name="search" value="<%= searchTerm %>"type="search" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <div class="nav-item">
          <a class="nav-link active" aria-current="page" href="/tutorRegister">Tutor Apply</a>
        </div>
      </div>
    </nav>

<br>
<div style="text-align:center;"><strong> Software Engineering Project CSC 648-848, Fall 2021 For Demonstration Only</strong></div>
<div style="text-align:center;"><strong> Fall 2021 | Section 3 | Team 3</strong></div>
<br>

<main>
    <div id="result">
        <div class="flex-search-results">

        <% for(let i = 0; i < searchResult.length; i++) { %>
            <div class="flex-search-item box shadow bg-white p-4">
                <% item = searchResult[i];%>
                <div class="">
                    <%if (images[i] !== undefined) {%>
                        <img class="search_image" src="data:image/jpeg;base64,  <%- images[i] %>">

                    <%} else {%>
                        <div class="search_image"></div>
                    <%}%>
                </div>
                <div class="col-md-9 mt-0">
                    <h1><%= item['first_name'] %> <%= item['last_name']%> </h1>
                    <h4>Major: <%= item['major_long_name']%></h4>
                    
                      <div class="d-grid gap-5 col-4 mx-6 float-end">
                        <button class="btn btn-info btn-lg border=0 rounded-0 " type="button">Contact!</button>
                        <button class="btn btn-info" type="button">Review</button>
                      </div>
                </div>
                
            </div>
            <% } %>
        </div>
    </div>
</main>

<footer>
</footer>

</body>
</html>